@model UniBiblio.Models.RegisterViewModel

<h2>Registrazione</h2>
<form asp-action="Register" method="POST">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" id="Nome" name="Nome" class="form-control" />
        <small class="form-text text-muted">Inserisci il tuo nome</small>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" id="Cognome" name="Cognome" class="form-control" />
        <small class="form-text text-muted">Inserisci il tuo cognome</small>
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" id="Email" name="Email" class="form-control" />
        <small class="form-text text-muted">Inserisci il tuo indirizzo email</small>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" id="Password" name="Password" type="password" class="form-control" />
        <small class="form-text text-muted">Inserisci una password sicura</small>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" />
        <small class="form-text text-muted">Conferma la tua password</small>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrati</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}